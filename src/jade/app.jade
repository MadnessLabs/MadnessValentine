doctype html
html(lang="en")
    head
        title=name
        link(href="#{css.dir}#{css.file}" rel="stylesheet")
        include ./favicon.jade
        meta(charset="utf-8")
        meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width, minimal-ui")
        meta(name="mobile-web-app-capable" content="yes")
        meta(name="apple-mobile-web-app-status-bar-style" content=css.vars.theme.primary)
        //meta(http-equiv="Content-Security-Policy" content="default-src *; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval' http://*.gstatic.com http://*.googleapis.com https://*.gstatic.com https://*.googleapis.com")
        if mobile
            script(src="cordova.js")
        script(src="https://maps.googleapis.com/maps/api/js?libraries=places&sensor=false" async defer)
        script(src="js/build.js" async defer)
    body(ng-app=name)       
        ion-nav-view